<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-table-users" author="qaisar_baltabayev">
        <comment>create table users</comment>
        <createTable tableName="users">
            <column name="id" type="bigint" remarks="unique identifier for the user">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(64)" remarks="username for the user">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(64)" remarks="status for the user">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" remarks="time the idea was created at">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" remarks="time the idea was updated at">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-table-files-attachment" author="qaisar_baltabayev">
        <comment>create table files_attachment</comment>
        <createTable tableName="files_attachment">
            <column name="id" type="uuid" remarks="unique identifier for the file attachment">
                <constraints primaryKey="true"/>
            </column>
            <column name="file_id" type="varchar(256)" remarks="unique identifier for the file">
                <constraints nullable="false"/>
            </column>
            <column name="user_info_id" type="uuid" remarks="unique identifier for the userInfo">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="varchar(64)" remarks="file descriptive name">
                <constraints nullable="false"/>
            </column>
            <column name="source" type="varchar(64)" remarks="bucket name">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="varchar(256)" remarks="file url">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" remarks="time the file attachment was created at">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" remarks="time the file attachment was updated at">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-table-user-preferences" author="qaisar_baltabayev">
        <comment>create table user preferences</comment>
        <createTable tableName="user_preferences">
            <column name="id" type="uuid" remarks="unique identifier for the user preferences">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint" remarks="unique identifier for the user preferences">
                <constraints nullable="false"/>
            </column>
            <column name="preferred_gender" type="varchar(16)" remarks="preferred gender type">
                <constraints nullable="false"/>
            </column>
            <column name="max_age" type="integer" remarks="preferred user max age">
                <constraints nullable="false"/>
            </column>
            <column name="min_age" type="integer" remarks="preferred user min age">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" remarks="time the user preferences was created at">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" remarks="time the user preferences was updated at">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-table-user-info" author="qaisar_baltabayev">
        <comment>create table user info</comment>
        <createTable tableName="user_infos">
            <column name="id" type="uuid" remarks="unique identifier for the vote">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint" remarks="unique identifier for the user">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="integer" remarks="user age">
                <constraints nullable="false"/>
            </column>
            <column name="bio" type="varchar(1024)" remarks="user bio description">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(64)" remarks="user bio description">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="varchar(16)" remarks="gender type">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(64)" remarks="user name">
                <constraints nullable="false"/>
            </column>
            <column name="personality_type" type="varchar(255)" remarks="user mbti type">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" remarks="time the vote was created at">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" remarks="time the vote was updated at">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="005-add-foreign-key-user-infos-users" author="qaisar_baltabayev">
        <comment>add foreign key constraint between user_infos and users</comment>
        <addForeignKeyConstraint baseTableName="user_infos"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_infos_users"
                                 referencedTableName="users" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="006-add-foreign-key-user-preferences-users" author="qaisar_baltabayev">
        <comment>add foreign key constraint between user_preferences and users</comment>
        <addForeignKeyConstraint baseTableName="user_preferences"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user-preferences-users"
                                 referencedTableName="users" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="007-add-foreign-key-files-attachment-user-infos" author="qaisar_baltabayev">
        <comment>add foreign key constraint between files_attachment and user_infos</comment>
        <addForeignKeyConstraint baseTableName="files_attachment"
                                 baseColumnNames="user_info_id"
                                 constraintName="fk_files_attachment_user_infos"
                                 referencedTableName="user_infos" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>