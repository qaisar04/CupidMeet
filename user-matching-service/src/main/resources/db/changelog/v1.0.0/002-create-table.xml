<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-table-user-reaction" author="qaisar_baltabayev">
        <comment>create table user reaction</comment>
        <createTable tableName="user_reaction">
            <column name="id" type="bigserial" remarks="unique identifier for the user reaction">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint" remarks="user ID for the reaction">
                <constraints nullable="false"/>
            </column>
            <column name="target_user_id" type="bigint" remarks="target user ID for the reaction">
                <constraints nullable="false"/>
            </column>
            <column name="reaction_type" type="varchar(255)" remarks="reaction type">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-table-user-evaluation" author="qaisar_baltabayev">
        <comment>create table user evaluation</comment>
        <createTable tableName="user_evaluation">
            <column name="id" type="bigint" autoIncrement="true" remarks="unique identifier for the user evaluation">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint" remarks="user ID for the evaluation">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-table-rated-users" author="qaisar_baltabayev">
        <comment>create table rated users</comment>
        <createTable tableName="user_rated_list">
            <column name="user_evaluation_id" type="bigint" remarks="ID of the user rating">
                <constraints nullable="false"/>
            </column>
            <column name="rated_user_id" type="bigint" remarks="ID of the rated user">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-add-fk-rated-users" author="qaisar_baltabayev">
        <comment>add foreign key constraint to user_rated_list table</comment>
        <addForeignKeyConstraint baseTableName="user_rated_list"
                                 baseColumnNames="user_evaluation_id"
                                 constraintName="fk_user_rated_list_user_rating"
                                 referencedTableName="user_evaluation"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>