<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-table-user-reaction" author="qaisar_baltabayev">
        <comment>create table user reaction</comment>
        <createTable tableName="user_reaction">
            <column name="id" type="bigint" remarks="unique identifier for the user reaction">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint" remarks="user ID for the reaction">
                <constraints nullable="false"/>
            </column>
            <column name="target_user_id" type="bigint" remarks="target user ID for the reaction">
                <constraints nullable="false"/>
            </column>
            <column name="reaction_type" type="varchar(255)" remarks="reaction type">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-table-user-rating" author="qaisar_baltabayev">
        <comment>create table user rating</comment>
        <createTable tableName="user_rating">
            <column name="id" type="bigint" remarks="unique identifier for the user rating">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint" remarks="user ID for the rating">
                <constraints nullable="false"/>
            </column>
            <column name="rated_user_id" type="bigint" remarks="rated user ID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>